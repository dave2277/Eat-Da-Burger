
<div class="enteredburgers">
    <h3>Mouthwatering Dream Burgers</h3>
    <ul>
        {{#each burgers}}
            {{#unless this.devoured}}
                <li>
                {{this.burger_name}}
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button class="btn .btn-xs devour" type="submit">Devour It!</button>
                </form>
                </li>
             {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="eatenburgers">
    <h3>Dream Burgers You've Eaten</h3>
    <ul>
       {{#each burgers}}
           {{#if this.devoured}}
               <li>
                   {{this.burger_name}}
               </li>
           {{/if}}
       {{/each}}
    </ul>
</div>











